<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3"
        android:background="@drawable/win_today_back"
        android:padding="2dp"
        tools:context="com.pro1.asus.cric_pro_1.WinTodayActivity">

        <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
        >
                <TextView
                        android:padding="10dp"
                        android:id="@+id/textview_score_id"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="0%"
                        android:textStyle="bold"
                        android:textSize="30sp"
                        android:textColor="#ffffff"
                />
        </LinearLayout>

        <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp"
        >
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@drawable/edittext_back"
                        android:paddingRight="5dp"
                >
                        <ImageView
                                android:padding="3dp"
                                android:background="@drawable/edittext_back_2"
                                android:layout_weight="1"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:src="@drawable/trophy"
                                android:layout_marginRight="2dp"
                        />
                        <AutoCompleteTextView
                                android:gravity="center"
                                android:layout_weight="1"
                                android:id="@+id/edittext_team_id"
                                android:layout_width="match_parent"
                                android:layout_height="90dp"
                                android:textSize="10sp"
                                android:textStyle="bold"
                                android:hint="Team name"
                                android:backgroundTint="#1dd600"
                                android:textColorHint="#a2ff00"
                        />
                </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_margin="5dp"
        >
                <ImageButton
                        android:id="@+id/imagebutton_hit_id"
                        android:background="@drawable/ball_btn_circle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ball_white"

                />
        </LinearLayout>

</LinearLayout>
