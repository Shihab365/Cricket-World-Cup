<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/drawerid"
        tools:openDrawer="start"
        tools:context="com.pro1.asus.cric_pro_1.MainActivity">

    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="8dp"
            android:orientation="vertical"
            android:background="#263238"
            android:weightSum="3"
            tools:context="com.pro1.asus.cric_pro_1.MainActivity">

        <!-- 1st row -->
        <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:clipToPadding="false"
        >
            <android.support.v7.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    card_view:cardUseCompatPadding="true"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/team_id"
                    android:layout_margin="5dp"
                    android:clickable="true"
                    card_view:cardElevation="5dp"
                    card_view:cardCornerRadius="6dp"
            >
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="#ffa000"
                        android:padding="5dp"
                >
                    <ImageView
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:src="@drawable/team64"
                            android:layout_marginBottom="5dp"
                    />
                    <View
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:layout_margin="5dp"
                            android:background="#ffffff"
                            android:padding="5dp"
                    />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TEAM"
                            android:textStyle="bold"
                            android:textSize="45sp"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                    />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardElevation="5dp"
                    card_view:cardCornerRadius="6dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/fixture_id"
                    android:layout_margin="5dp"
                    android:clickable="true"
            >
                <LinearLayout
                        android:background="#ffc107"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp"
                >
                    <ImageView
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:src="@drawable/fixture64"
                            android:layout_marginBottom="5dp"
                    />
                    <View
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:layout_margin="5dp"
                            android:background="#ffffff"
                            android:padding="5dp"
                    />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SCHEDULE"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:textSize="45sp"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                    />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <!-- 2nd row -->
        <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:clipToPadding="false"
        >
            <android.support.v7.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardElevation="5dp"
                    card_view:cardCornerRadius="6dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/player_list_id"
                    android:layout_margin="5dp"
                    android:clickable="true"
            >
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="#c0ca33"
                        android:padding="5dp"
                >
                    <ImageView
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:src="@drawable/player_list64"
                            android:layout_marginBottom="5dp"
                    />
                    <View
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:layout_margin="5dp"
                            android:background="#02003b"
                            android:padding="5dp"
                    />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PLAYER LIST"
                            android:textStyle="bold"
                            android:textSize="45sp"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                    />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardElevation="5dp"
                    card_view:cardCornerRadius="6dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/win_today_id"
                    android:layout_margin="5dp"
                    android:clickable="true"
            >
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="#d4e157"
                        android:padding="5dp"
                >
                    <ImageView
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:src="@drawable/win64"
                            android:layout_marginBottom="5dp"
                    />
                    <View
                            android:padding="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:layout_margin="5dp"
                            android:background="#02003b"
                    />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="WHO WIN TODAY"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:textSize="40sp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                    />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <!-- 3rd row -->
        <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:clipToPadding="false"
        >
            <android.support.v7.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardElevation="5dp"
                    card_view:cardCornerRadius="6dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/live_score_id"
                    android:layout_margin="5dp"
                    android:clickable="true"
            >
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="#ff5722"
                        android:padding="5dp"
                >
                    <ImageView
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:src="@drawable/live_score64"
                            android:layout_marginBottom="5dp"
                    />
                    <View
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:layout_margin="5dp"
                            android:background="#ffffff"
                            android:padding="5dp"
                    />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LIVE SCORE"
                            android:textStyle="bold"
                            android:textSize="45sp"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                    />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardElevation="5dp"
                    card_view:cardCornerRadius="6dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/live_watch_id"
                    android:layout_margin="5dp"
                    android:clickable="true"
            >
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="#ff6636"
                        android:padding="5dp"
                >
                    <ImageView
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:src="@drawable/live_watch64"
                            android:layout_marginBottom="5dp"
                    />
                    <View
                            android:padding="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:layout_margin="5dp"
                            android:background="#ffffff"
                    />
                    <TextView
                            android:textColor="#000000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LIVE TV"
                            android:textStyle="bold"
                            android:textSize="45sp"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                    />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>

    <android.support.design.widget.NavigationView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/navigationid"
            android:background="@android:color/white"
            app:menu="@menu/nav_menu_layout"
            android:layout_gravity="start"
            app:headerLayout="@layout/nav_header_layout"
    >

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
