<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#ffa000"
        tools:context="com.pro1.asus.cric_pro_1.TMatchActivity">

    <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            card_view:cardUseCompatPadding="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardElevation="1dp"
            card_view:cardCornerRadius="5dp"
            card_view:cardBackgroundColor="#5392c70d"
    >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:weightSum="2"
                android:layout_margin="20dp"
        >
            <android.support.v7.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    card_view:cardUseCompatPadding="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    card_view:cardElevation="5dp"
                    card_view:cardCornerRadius="7dp"
            >
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="2"
                        android:background="@drawable/tm_1_bk"
                        android:padding="5dp"
                >
                    <TextView
                            android:id="@+id/team_name_1_id"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Team 1"
                            android:background="#9e9d24"
                            android:textColor="#000000"
                            android:layout_margin="2dp"
                            android:textStyle="bold"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                    />
                    <ImageView
                            android:id="@+id/team_flag_1_id"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:src="@drawable/eng_flag"
                            android:background="#827717"
                            android:layout_margin="2dp"
                            android:padding="35dp"
                    />
                </LinearLayout>
            </android.support.v7.widget.CardView>


            <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="VS"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceLarge"
            />

            <android.support.v7.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    card_view:cardUseCompatPadding="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    card_view:cardElevation="5dp"
                    card_view:cardCornerRadius="7dp"
            >
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="2"
                        android:background="@drawable/tm_2_bk"
                        android:padding="5dp"
                >
                    <TextView
                            android:id="@+id/team_name_2_id"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Team 2"
                            android:textColor="#000000"
                            android:background="#9e9d24"
                            android:layout_margin="2dp"
                            android:textStyle="bold"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                    />
                    <ImageView
                            android:id="@+id/team_flag_2_id"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:src="@drawable/sa_flag"
                            android:background="#827717"
                            android:layout_margin="2dp"
                            android:padding="35dp"
                    />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>